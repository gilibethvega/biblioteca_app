<div class="container">
  <%= form_with(model: book, local: true) do |form| %>
    <% if book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(book.errors.count, "error") %> han impedido que se guarde este libro</h2>

        <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :title, 'Título de libro'%>
      <%= form.text_field :title %>
    </div>

    <div class="field">
      <%= form.label :author, 'Autor' %>
      <%= form.text_field :author %>
    </div>

    <div class="field">
      <%= form.label :status, 'Estado' %>
      <%= form.select :status, Book.statuses.keys %>
    </div>
    
    <% if params[:action] != "new" && params[:action] != "create" %>
      <div class="field">
      <%= form.label :name_person, 'Nombre de persona que lo tiene' %>
      <%= form.text_field :name_person %>
    </div>
    <% end %>

    
    <% if params[:action] != "new" && params[:action] != "create" %>
      <div class="field">
      <%= form.label :start_date, 'Fecha de préstamo' %>
      <%= form.date_select :start_date %>
    </div>
    <% end %>


    <% if params[:action] != "new" && params[:action] != "create" %>
      <div class="field" id="default_field">
        <%= form.label :end_date, 'Fecha de devolución' %>
        <%= form.date_select :end_date %>
      </div>
    <% end %>
    
    <div class="actions">
      <%= form.submit 'Crear libro' %>
    </div>
  <% end %>
</div>
