    <%= form.date_select :start_date %>
  </div>


  <% if params[:action] != "new" %>
       <div class="field" id="default_field">
       <%= form.label :end_date %>
       <%= form.date_select :end_date %>
     </div>
  <% end %>
  
  <div class="actions">
    <%= form.submit %>
  </div>
